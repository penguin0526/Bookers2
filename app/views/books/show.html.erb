<p id="notice"></p>
<div class="container">
  <div class="row">
    <%= render 'users/user-info', books: @books %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(user.id) do %>
                  <%= image_tag user.get_image %>
                  <br>
                  <%= @user.name %>
                <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td><%= book.body %></td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(book.id), class: "btn btn-sm btn-succes edit_book_#{book.id}" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？", class="btn btn-sm btn-danger destroy_book_#{book.id}" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>