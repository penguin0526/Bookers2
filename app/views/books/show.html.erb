<p id="notice"></p>
<div class="container">
  <div class="row">
    <%= render 'user-info', user: current_user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@user) do %>
                  <%= image_tag @user.get_profile_image(100,100) %>
                  <br>
                  <%= @user.name %>
                <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book) %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{params[:id]}" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book_#{params[:id]}" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>